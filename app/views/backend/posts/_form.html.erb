<%= form_with model: [:backend, @post], local: true do |form| %>
  

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <%= form.fields_for :images do |p| %>
    <div class="field">
      <%= p.label :photo %>
      <%= p.file_field :photo, multiple: true, name: "images[photo][]", class: "upload-image" %>
    </div>
  <% end %>
  <div id="preview"></div>

  <div class="field">
    <%= form.label :description %>
    <%= form.cktext_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
