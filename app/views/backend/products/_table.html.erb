<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t ".list_product" %></h1>
  </div>
</div>
<div class="panel-heading">
  <div class="col-md-offset-0 form_import">
      <%= form_tag(import_backend_products_path, multipart: true, method: :post) do %>
        <%= file_field_tag :file, {class: "form-control"}%>
        <%= submit_tag t ".import_file_CSV" %>
      <% end %>
      <%= form_tag(backend_products_path, method: :get) do %>
        <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", "name"), { class: "form-control ", prompt: "Select something"} %>
        <%= text_field_tag :search, nil, placeholder: t(".enter_name_category") %>
        <%= submit_tag t ".search" %>
      <% end %>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t ".list_product" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
              <tr>
                <th class="center"><%= t ".name" %></th>
                <th class="center"><%= t ".price" %></th>
                <th class="center"><%= t ".quantity" %></th>
                <th class="center"><%= t ".description" %></th>
                <th class="center"><%= t ".picture" %></th>
                <th class="center"><%= t ".number_of_order" %></th>
                <th class="center"><%= t ".category" %></th>
                <th class="center" colspan="2"><%= t ".function" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render @products %>
            </tbody>
          </table>
          <%= link_to t(".create_product"), new_backend_product_path, class: "btn btn-success" %>
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>
