<tr class="odd gradeX">
  <td class="center"><%= product.name %></td>
  <td class="center"><%= number_to_currency (product.price) %></td>
  <td class="center"><%= product.quantity %></td>
  <td class="center"><%= product.description %></td>
  <td class="center"><%= image_tag product.picture.thumb.url %></td>
  <td class="center"><%= product.number_of_order %></td>
  <td class="center"><%= product.category.name %></td>
  <td class="center"><%= link_to t(".edit"), edit_backend_product_path(product) %></td>
  <td class="center"><%= link_to t(".delete"), backend_product_path(product), method: :delete, data: {confirm: t(".you_sure")} %></td>
</tr>
