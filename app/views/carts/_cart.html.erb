<tr class="cart_<%= cart["product_id"] %>">
  <td class="col-sm-8 col-md-6">
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading"><a href="#"><%= cart["name"] %></a></h4>
        <h5 class="media-heading"> by <a href="#"><%= t ".brand_name" %></a></h5>
        <span><%= t ".status" %></span><span class="text-success"><strong><%= t ".in_stock" %></strong></span>
      </div>
    </div>
  </td>
  <td class="col-sm-1 col-md-1" style="text-align: center">
    <input type="number" id="number-<%= cart["product_id"] %>" class="number form-control text-center" min="1" value="<%= cart["quantity"] %>" data-id ="<%= cart["product_id"] %>">
  </td>
  <td class="col-sm-1 col-md-1 text-center price"
    price-value="<%= cart["price"] %>"
    id="<%= cart["product_id"] %>"><strong><%= number_to_currency cart["price"] %></strong>
  </td>
  <td class="col-sm-1 col-md-1 text-center"><strong id="total_price-<%= cart["product_id"]%>"><%=  number_to_currency (cart["total_price"]) %></strong>
  </td>
  <td class="col-sm-1 col-md-1 button">
    <button type="button" class="remove btn btn-danger" data-id ="<%= cart["product_id"] %>">
      <span class="glyphicon glyphicon-remove"></span> <%= t ".remove" %>
    </button>
  </td>
</tr>
