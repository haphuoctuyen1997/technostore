<% provide(:title, @user.name) %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= t ".full_name" %></th>
        <th><%= t ".email" %></th>
        <th><%= t ".address" %></th>
        <th><%= t ".phone" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @user.name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.address %></td>
        <td><%= @user.phone %></td>
        <td><%= link_to t(".edit"), edit_user_path %></td>
      </tr>
    </tbody>
  </table>
  <div class="col-md-8">
    <% if @user.suggests.any? %>
      <h3><%= t(:suggests_count, count: @user.suggests.count) %></h3>
      <%= render @suggests %>
    <% end %>
  </div>
</div>
