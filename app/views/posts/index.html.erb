<div class="container">
  <div class="row">
    <div class="col-md-12">
        <h2>List of News</h2>
    </div>
  </div> 
	<div class="row">
    <div class="col-md-9">
    	<% @posts.each do |post| %>
        <div class="row mb-2">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <p class="image_post">
											<% post.images.each do |p| %>
											  <%= image_tag p.photo_url %>
											  <!-- <%= link_to "Destroy", image_path(p), method: :delete %> -->
											<% end %>
										</p>
                  </div>
                    <div class="col-md-9">
                      <div class="card-body">
                        <div class="news-content">
                          <h3><%= post.title %></h3><br>
                          <h4><%= link_to "See details", post %></h4>
                        </div><br>
                        <div class="news-footer">
                        <div class="news-author">
                          <ul class="list-inline list-unstyled">
                            <li class="list-inline-item text-secondary">
                              <i class="fa fa-user"></i>
                                Prashant Singh
                            </li>
                            <li class="list-inline-item text-secondary">
                              <i class="fa fa-eye"></i>
                                110 Views
                            </li>
                            <li class="list-inline-item text-secondary">
                              <i class="fa fa-calendar"></i>
                                <%= created_at_format post.created_at %>
                            </li>
                          </ul>
                        </div>   
                        </div>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
                <img src="http://eskimo.egemenerd.com/wp-content/uploads/2018/05/blog17.jpg">
            </div>
          </div>
        </div>
      </div>
    </div>
	</div>
	<%= link_to "Back", root_path %>
</div>
