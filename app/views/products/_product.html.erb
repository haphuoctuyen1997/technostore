<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 product_recent">
  <article class="col-item">
    <div class="photo">
      <div class="options-cart-round">
        <button class="addcart btn btn-default" title="Add to cart" data-id="<%= product.id %>">
          <span class="fa fa-shopping-cart"></span>
        </button>
      </div>
      <div class="photo_bot">
        <%= link_to image_tag(product.picture.url||default.png), product, class: "" %>
      </div>
    </div>
    <div class="info">
      <div class="row">
        <div class="price-details col-md-6">
          <div class="product_home">
            <p class="details">
              <%= product.other_features %>
            </p>
          </div>
          <div class="name_product_home">
            <h1>
              <b><%= link_to product.name, product, class: "" %></b>
            </h1>
          </div>
          <div class="separator clear-left">
            <p class="btn-add">
              <i class="fa fa-shopping-cart"></i><a href="#" class="text-danger"><b><%= number_to_currency product.price %></b></a>
            </p>
            <p class="btn-details">
              <a href="#" class="hidden-sm" data-toggle="tooltip" data-placement="top" title="Add to wish list"><i class="fa fa-heart"></i></a>
              <a href="#" class="hidden-sm" data-toggle="tooltip" data-placement="top" title="Compare"><i class="fa fa-exchange"></i></a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </article>
</div>
